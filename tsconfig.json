{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "allowJs": true,
      "checkJs": false,
      "jsx": "react",
      "outDir": "./build",
      "rootDir": "./src",
      "removeComments": true,
      "noEmit": true,
      "pretty": true,
      "skipLibCheck": true,
      "strict": false, // Isključuje stroga pravila
      "noImplicitAny": false, // Dozvoljava korišćenje `any` tipa
      "moduleResolution": "node",
      "esModuleInterop": true,
      "baseUrl":"./",
      "paths": {
        "@src/": ["src/"]
    }
    },
    "include": [
      "./src/**/*","./declaration.d.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
